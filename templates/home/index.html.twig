{% extends 'base.html.twig' %}

{% block title %}AskSphere
{% endblock %}

{% block body %}
	<ul class="space-y-8 bg-white">
		{% for question in questions %}
			<a href="{{ path('question_show', { id: question.id  }) }}" class="flex shadow-md p-4 rounded-sm border border-gray-300 hover:shadow-lg transition-all">
				<div class="flex flex-col items-center mr-4">
<span class="material-symbols-outlined text-gray-600">
arrow_drop_up
</span>
					<p class="text-xs {{ question.rating > 0 ? 'text-green-500' : question.rating < 0 ? 'text-red-500' : '' }}">
						{{ question.rating }}
					</p>
<span class="material-symbols-outlined text-gray-600">
arrow_drop_down
</span>

				</div>
				<div class="flex-grow flex flex-col">
					<div class="mb-4 question-content">
						<h3 class="mb-2 text-lg font-semibold">{{ question.title }}</h3>
						<p class="text-gray-600">{{ question.content }}</p>
					</div>
					<div class="flex flex-row justify-between items-center">
						<div class="flex items-center">
							<img class="w-8 h-8 rounded-full mr-2" src="{{ question.author.avatar }}" alt="{{ question.author.name }}"/>
							<small class="text-blue-500 cursor-pointer">{{ question.author.name }}</small>
						</div>
						<div class="flex items-center">
							<i class="far fa-comment mr-2 text-gray-600"></i>
							<p class="text-gray-600">{{ question.nbrOfResponse }}</p>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</ul>
{% endblock %}
