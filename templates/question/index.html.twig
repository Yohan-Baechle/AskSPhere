{% extends 'base.html.twig' %}

{% block title %}Ask a question
{% endblock %}

{% block body %}
	<h1 class="text-4xl font-extrabold mb-8">Ask a question</h1>
	<div class="shadow-md w-full p-8 bg-white">
		{{ form_start(form, {'attr': {'class': 'mb-8'}}) }}

		{{ form_row(form.title, {'attr': {'class': 'mb-4 border p-2 w-full bg-gray-50'}}) }}
		{{ form_row(form.content, {'attr': {'class': 'mb-4 border p-2 w-full bg-gray-50'}}) }}
		<button class="flex items-center rounded-lg bg-gray-800 hover:bg-black py-3 px-8 font-sans text-xs font-bold uppercase text-white transition-all" data-ripple-light="true">
			<span class="material-symbols-outlined me-2">
				send
			</span>
			Request an answer
		</button>
		{{ form_end(form) }}
	</div>
    	<div class="flex items-center m-4 text-gray-600">
		<span class="material-symbols-outlined me-2">
			arrow_back
		</span>
		<a href="{{ path('home')}}">Previous</a>
	</div>
    

{% endblock %}